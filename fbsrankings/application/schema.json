{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://github.com/mikee385/fbsrankings/blob/master/fbsrankings/application/config_schema.json",
    "type": "object",
    "required": [
        "settings",
        "seasons"
    ],
    "properties": {
        "settings": {
            "type": "object",
            "required": [
                "storage_type"
            ],
            "properties": {
                "storage_type": {
                    "type": "string",
                    "enum": [ "sqlite", "memory" ]
                },
                "database": {
                    "type": "string",
                    "additionalProperties": { "type": "string" }
                }
            }
        },
        "alternate_names": {
            "type": "object"
        },
        "seasons": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "year",
                    "postseason_start_week",
                    "source_type",
                    "teams",
                    "games"
                ],
                "properties": {
                    "year": {
                        "type": "integer"
                    },
                    "postseason_start_week": {
                        "type": "integer"
                    },
                    "source_type": {
                        "type": "string"
                    },
                    "teams": {
                        "type": "string"
                    },
                    "games": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
